<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <ImageView
        android:id="@+id/tipbox_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/htjc_friendly_tip_0"
        android:src="@drawable/htjc_img_error_bg_1" />

    <TextView
        android:id="@+id/friendly_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:text="@string/htjc_friendly_tip_1"
        android:textColor="@color/htjc_white"
        android:visibility="gone"
        android:textSize="20sp" />
   <ImageView
        android:id="@+id/tipbox_bgicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
       
        android:visibility="gone"
        android:src="@drawable/htjc_success" />
</RelativeLayout>