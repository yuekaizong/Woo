<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/greenyellow">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_margin="5dp"
                android:hint="登录名" />
        </android.support.design.widget.TextInputLayout>


        <com.example.library.BandCardEditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="银行卡" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cardinputEditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <kaizone.songmaya.woo.widget.CardInputEditText
                android:id="@+id/cardinputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入银行卡" />
        </android.support.design.widget.TextInputLayout>

        <kaizone.songmaya.woo.widget.DelEditText
            android:id="@+id/del_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <kaizone.songmaya.woo.widget.DelEditText
            android:id="@+id/del_et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit" />

        <Button
            android:id="@+id/idcard1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="身份证正面扫描" />

        <Button
            android:id="@+id/idcard2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="身份证反面扫描" />

        <Button
            android:id="@+id/liveDetect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="人脸识别" />

        <Button
            android:id="@+id/pushData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pushData"
            android:textAllCaps="false" />

        <kaizone.songmaya.woo.widget.TimeTextView
            android:id="@+id/timeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/takePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="takePhoto"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
